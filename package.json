{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --fix --cache --ext ts,js,vue --report-unused-disable-directives --max-warnings 1",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "precommit": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint . --fix"
    ]
  },
  "dependencies": {
    "@nuxt/eslint": "^0.3.13",
    "@pinia/nuxt": "^0.5.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.414.0",
    "nuxt": "^3.12.4",
    "radix-vue": "^1.9.2",
    "reset-css": "^5.0.2",
    "shadcn-nuxt": "^0.10.4",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.3",
    "vue": "latest"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^6.12.1",
    "husky": "^9.1.2",
    "lint-staged": "^15.2.7",
    "sass": "^1.77.8"
  }
}
